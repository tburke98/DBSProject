generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RentCost {
  year           Int              @id @default(2000)
  cost           Decimal
  MonthlyExpense MonthlyExpense[]
}

model MonthlyExpense {
  year        Int      @default(2000)
  month       Int      @default(1)
  electricity Decimal
  water       Decimal
  heat        Decimal
  rent        RentCost @relation(fields: [year], references: [year])

  @@id([year, month])
}
